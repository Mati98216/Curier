@model CurierProject.Models.EditPackageDetailsViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalToggleLabel">Deliver package</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <p>By clicking deliver button you will finish delivery.</p>
        <h2>Delivery to:</h2>
        <div class="input-group mb-3">
            <span class="input-group-text">Name</span>
            <input type="text" class="form-control" value="@Model.Recipient.GetFullName()" disabled="disabled" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Address</span>
            <input type="text" class="form-control" value="@Model.Recipient.Address" disabled="disabled" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Phone</span>
            <input type="text" class="form-control" value="@Model.Recipient.Phone" disabled="disabled" />
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">Cancel</button>
        @using (Html.BeginForm("DeliveryPackage", "Courier"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(e => e.PackageID)
            <button class="btn btn-primary" type="submit">Deliver package</button>
        }
    </div>
</div>