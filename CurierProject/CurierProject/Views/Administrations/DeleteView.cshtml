@using CurierProject.Domain.Extensions
  @model CurierProject.Models.AdministrationsDeleteViewModel
@{
    ViewBag.Title = "User Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-10">
    <div calss="row">
        <div class="offset-md-3 mt-4">

            <h5>Are you sure you want to delete this account?</h5>
        </div>
            <div class="offset-md-4 mt-4">
                <button type="submit" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("DeleteAccount", "Administrations" , new { id=Model.ID }) + "'");">Delete</button>
                <button type="button" class="btn btn-secondary" onclick="history.go(-1);">Close</button>
                


            </div>
        </div>
</div>