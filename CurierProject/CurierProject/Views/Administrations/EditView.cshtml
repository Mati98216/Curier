@using CurierProject.Domain.Extensions
@model CurierProject.Models.AdministrationsViewModel
@{
    ViewBag.Title = "User Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-10">
    <div calss="row">
        <div class="offset-md-4 mt-3">
            <div class="modal-dialog-centered">
                @using (Html.BeginForm("Create", "Administrations"))
                {@Html.HiddenFor(e => e.ID)
                <table>
                    @Html.AntiForgeryToken()

                    <tr> <th>@Html.Label("First Name:")</th> <th>@Html.EditorFor(x => x.FirstName)</th> </tr>
                    <tr><th> @Html.Label("Last Name:") </th><th> @Html.EditorFor(x => x.LastName) </th> </tr>
                    <tr><th> @Html.Label("Email:") </th><th> @Html.EditorFor(x => x.Email) </th> </tr>
                    <tr><th> @Html.Label("Phone:") </th><th> @Html.EditorFor(x => x.Phone)</th> </tr>
                    <tr><th> @Html.Label("Address:") </th><th> @Html.EditorFor(x => x.Address) </th> </tr>
                    <tr><th>@Html.Label("Password")</th><th>@Html.EditorFor(x => x.Password)</th></tr>
                    <tr><th>    @Html.Label("Role:") </th><th>    @Html.DropDownListFor(x => x.Role, Model.Roles) </th> </tr>
                    <tr><th> @Html.Label("Is Active:")</th><th> @Html.EditorFor(x => x.IsActive) </th> </tr>

                </table>
                <button type="button" class="btn btn-secondary" onclick="history.go(-1);">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            }
            </div>
        </div>
    </div>
</div>

