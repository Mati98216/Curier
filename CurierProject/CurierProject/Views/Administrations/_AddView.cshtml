@using CurierProject.Domain.Extensions
@model CurierProject.Models.AdministrationsViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    @using (Html.BeginForm("Create", "Administrations"))
    {
        <div class="modal-body">


            <table>
                @Html.AntiForgeryToken()
                <tr><th>First Name: </th><th>@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" }) </th></tr>
                <tr><th>Last Name:</th><th> @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" }) </th></tr>
                <tr><th>Email:</th><th> @Html.TextBoxFor(m => m.Email, new { @class = "form-control" }) </th></tr>
                <tr><th>Password:</th><th>  @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })</th></tr>
                <tr><th>Phone: </th><th>    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" }) </th></tr>
                <tr><th>Address: </th><th> @Html.TextBoxFor(m => m.Address, new { @class = "form-control" }) </th></tr>
                <tr><th>Is Active: </th><th> @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control1" }) </th></tr>
                <tr><th>Role </th><th>@Html.DropDownListFor(m => m.Role,Model.Roles)</th></tr>

                @Html.ValidationMessageFor(m => m.FirstName)
                @Html.ValidationMessageFor(m => m.LastName)
                @Html.ValidationMessageFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Phone)
                @Html.ValidationMessageFor(m => m.Address)
                @Html.ValidationMessageFor(m => m.IsActive)
            </table>


        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    }
</div>
